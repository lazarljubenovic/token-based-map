{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "skipLibCheck": true
    // "noEmitOnError": true // oh no its retarded
  },
  "files": [
    "src/index.ts"
  ]
}
